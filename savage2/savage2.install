post_install() {
    # Update runpath
    cd /opt/savage2
    ./savage2_update.bin --update-runpath    
}

post_upgrade() {
    post_install $1
}

post_remove() {
    echo "==> To completely remove Savage 2, you will need to manually remove"
    echo "==>   /opt/savage2/ as root"
}

op=$1
shift
$op $*
